	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-align-content: center;
	        align-content: center;
	margin-left: 5%;
	margin-right: 5%;
}
image{
	width: 25%;
	height: 25%;
